{
  "authors": [
    "Bernd Matzner <bernd.matzner@regard.io>"
  ],
  "description": "Regardio Brand Assets",
  "devDependencies": {
    "@regardio/system": "workspace:*",
    "@svgr/cli": "8.1.0",
    "@svgr/plugin-jsx": "8.1.0",
    "@svgr/plugin-svgo": "8.1.0",
    "linkedom": "0.18.12",
    "node-html-parser": "7.0.1",
    "svgo": "4.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./colors.css": {
      "default": "./src/styles/colors.css"
    }
  },
  "files": [
    "dist",
    "src/styles/colors.css"
  ],
  "license": "CC BY-SA 4.0",
  "name": "@regardio/brand",
  "private": false,
  "scripts": {
    "build": "exec-tsc --project tsconfig.build.json",
    "clean": "exec-clean .turbo dist src/generated",
    "dev": "exec-tsc --project tsconfig.build.json --watch",
    "generate": "exec-s generate:* lint",
    "generate:compass-base-sprite": "exec-ts scripts/convert-svgs-to-sprite.ts ./src/svg/compass-base ./src/generated/sprites/compass-base.svg",
    "generate:compass-base-sprites-components": "exec-ts scripts/build-compass-base-sprites.ts",
    "generate:icons": "svgr --icon --out-dir ./src/generated/icons -- ./src/svg/icons",
    "lint": "exec-s lint:*",
    "lint:biome": "lint-biome check --write --unsafe .",
    "lint:md": "lint-md --fix \"**/*.md\" \"!**/node_modules/**\" \"!**/dist/**\"",
    "prepare": "exec-husky",
    "typecheck": "exec-tsc --noEmit"
  },
  "sideEffects": false,
  "type": "module",
  "version": "0.1.0"
}
